<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/q5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".25">

                <Button
                    android:id="@+id/num1_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/q5"
                    android:layout_weight=".25"
                    android:background="@drawable/main_bg_rounded"
                    android:text="1"
                    android:textSize="@dimen/text50" />

                <Button
                    android:id="@+id/num2_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/q5"
                    android:layout_weight=".25"
                    android:background="@drawable/main_bg_rounded"
                    android:text="2"
                    android:textSize="@dimen/text50" />

                <Button
                    android:id="@+id/num3_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/q5"
                    android:layout_weight=".25"
                    android:background="@drawable/main_bg_rounded"
                    android:text="3"
                    android:textSize="@dimen/text50" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".25">

                <Button
                    android:id="@+id/num4_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/q5"
                    android:layout_weight=".25"
                    android:background="@drawable/main_bg_rounded"
                    android:text="4"
                    android:textSize="@dimen/text50" />

                <Button
                    android:id="@+id/num5_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/q5"
                    android:layout_weight=".25"
                    android:background="@drawable/main_bg_rounded"
                    android:text="5"
                    android:textSize="@dimen/text50" />

                <Button
                    android:id="@+id/num6_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/q5"
                    android:layout_weight=".25"
                    android:background="@drawable/main_bg_rounded"
                    android:text="6"
                    android:textSize="@dimen/text50" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".25">

                <Button
                    android:id="@+id/num7_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/q5"
                    android:layout_weight=".25"
                    android:background="@drawable/main_bg_rounded"
                    android:text="7"
                    android:textSize="@dimen/text50" />

                <Button
                    android:id="@+id/num8_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/q5"
                    android:layout_weight=".25"
                    android:background="@drawable/main_bg_rounded"
                    android:text="8"
                    android:textSize="@dimen/text50" />

                <Button
                    android:id="@+id/num9_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/q5"
                    android:layout_weight=".25"
                    android:background="@drawable/main_bg_rounded"
                    android:text="9"
                    android:textSize="@dimen/text50" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".25">

                <Button
                    android:id="@+id/num0_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/q5"
                    android:layout_weight=".77"
                    android:background="@drawable/main_bg_rounded"
                    android:text="0"
                    android:textSize="@dimen/text50" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:orientation="vertical">

            <Button
                android:id="@+id/plus_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/q5"
                android:layout_weight=".20"
                android:background="@drawable/main_bg_rounded"
                android:text="+"
                android:textSize="@dimen/text50" />

            <Button
                android:id="@+id/minus_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/q5"
                android:layout_weight=".20"
                android:background="@drawable/main_bg_rounded"
                android:text="-"
                android:textSize="@dimen/text50" />

            <Button
                android:id="@+id/multiply_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/q5"
                android:layout_weight=".20"
                android:background="@drawable/main_bg_rounded"
                android:text="*"
                android:textSize="@dimen/text50" />

            <Button
                android:id="@+id/division_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/q5"
                android:layout_weight=".20"
                android:background="@drawable/main_bg_rounded"
                android:text="/"
                android:textSize="@dimen/text50" />

            <Button
                android:id="@+id/equal_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/q5"
                android:layout_weight=".20"
                android:background="@drawable/main_bg_rounded"
                android:text="="
                android:textSize="@dimen/text50" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/input_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/q5"
            android:layout_weight=".45"
            android:background="@drawable/main_bg_rounded"
            android:cursorVisible="false"
            android:gravity="center"
            android:inputType="number"
            android:padding="@dimen/q5"
            android:textSize="@dimen/text30" />

        <TextView
            android:id="@+id/operator_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_edit"
            android:layout_margin="@dimen/q5"
            android:layout_weight=".1"
            android:background="@drawable/main_bg_rounded"
            android:gravity="center"
            android:padding="@dimen/q5"
            android:textSize="@dimen/text30"
            android:visibility="gone" />

        <EditText
            android:id="@+id/input2_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/operator_text"
            android:layout_margin="@dimen/q5"
            android:layout_weight=".45"
            android:background="@drawable/main_bg_rounded"
            android:cursorVisible="false"
            android:gravity="center"
            android:inputType="number"
            android:padding="@dimen/q5"
            android:textSize="@dimen/text30"
            android:visibility="gone" />
    </LinearLayout>

    <Button
        android:id="@+id/done_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/q5"
        android:background="@drawable/main_bg_rounded"
        android:text="@string/next" />
</LinearLayout>
